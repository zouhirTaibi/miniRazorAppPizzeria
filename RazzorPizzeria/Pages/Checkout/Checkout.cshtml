@page
@model RazzorPizzeria.Pages.Checkout.CheckoutModel
@{
}

<h1>Your order!!</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".jpg");
}
<div class="align-content-center">  
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true"/>
        <p>Your order for the @Model.PizzaName is ready!!</p>
        <p>Total Price for Your order is:@Model.PizzaPrice</p>
        <br />
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="Thankyou">Confirm Order</a>
    </div>
</div>